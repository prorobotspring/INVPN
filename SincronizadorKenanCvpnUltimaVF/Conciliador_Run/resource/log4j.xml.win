		<param name="Threshold" value="fatal"/>
		<param name="Subject" value="ERROR: INVPN"/>
		<param name="SMTPHost" value="CBN-MSS-SRV-040.digitelcorp.com.ve"/>
		<param name="From" value="INVPN@digitel.com.ve"/>
		<param name="to" value="javier_cabrera@digitel.com.ve"/>
		<param name="BufferSize" value="512"/>
