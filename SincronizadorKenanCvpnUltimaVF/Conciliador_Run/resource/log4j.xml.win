<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

<!-- 
log4j.logger.com.ve.digitel=ON
log4j.logger.org.apache.axis=OFF
 -->

	<appender name="STDOUT"
		class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"	value="[%d] [%-5p] [%C.%M] [%F:%L] -> [%m]%n" />
		</layout>
	</appender>
	
	<appender name="PRG_FILE" class="org.apache.log4j.FileAppender">
		<param name="File" value="logs/int_prog.log" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"	value="%-4r [%t] %-5p %c %x - %m%n" />
		</layout>
	</appender>
	
	<appender name="PROD_FILE" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="logs/int_prog_perform.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<param name="Threshold" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"	value="[%d{yyyyMMMdd HH:mm:ss,SSS}][%-5p][%M %F:%L][%m]%n" />
		</layout>
	</appender>

	<appender name="PROD_SMS" class="ve.com.digitel.bssint.log.SMSAppender">
		<param name="Threshold" value="info"/>
		<param name="DestinationsFile" value="resource/sms.cfg"/>
		<param name="From" value="INVPN2"/>
		<param name="User" value="sisco"/>
		<param name="Password" value="sisco919"/>
		<param name="Server" value="csov01"/>
		<param name="Port" value="9011"/>
		<param name="TimeOut" value="1000"/>
		<layout class="org.apache.log4j.PatternLayout">
			<!-- Definicion del patron de la traza [Fecha][NIVEL][ID][METODO ARCHIVO][MENSAJE] -->
			<param name="ConversionPattern"	value="%m%n" />
		</layout>
	</appender>


