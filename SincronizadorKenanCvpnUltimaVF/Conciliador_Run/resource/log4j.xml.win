			<param name="ConversionPattern"	value="APP %d{yyyyMMMdd HH:mm} [%-5p] %C{1} - %m%n" />
		</layout>
	</appender>
	 -->

	<!-- 
	 -->
	<logger name="org.apache.axis">
	    <level value="warn"/> 
	</logger>	

	
	<category name="MYAPP_PERFORMANCE">
		<priority value="error" />
		<appender-ref ref="PROD_SMS" />
	</category>
	<root>
    	 <level value="debug"/>
    	<!-- 
		<priority value="debug" />
    	 -->

		<appender-ref ref="STDOUT" />
		<appender-ref ref="PRG_FILE" />
		<appender-ref ref="PROD_FILE" />
		<appender-ref ref="PROD_SMS" />	
		<!-- 
		<appender-ref ref="PROD_SMTP" />		
		 -->	
	</root>
</log4j:configuration>